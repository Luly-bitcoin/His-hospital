extends layout

block content
  head
    title Iniciar Sesi칩n
    link(rel="stylesheet", href="/css/style.css")
    style.
        body {
            background: linear-gradient(to bottom, #7dbcff, rgba(255,255,255,0.8)), url('/img/hospital .jpg');
            background-repeat: no-repeat;
            background-size: 100% 130%;
            background-position: center center;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .contenedor{
            width: 500px;
        }
        .contenedor h1 {
            font-size: 4vh;
            margin-bottom: 20px;
            color: #333;
            text-align: center;
        }
        form {
            display: flex;
            flex-direction: column;
            align-items: stretch;
        }

        label {
            margin: 10px 0 5px;
            font-weight: bold;
            text-align: left;
            color: #333;
        }

        input[type="text"],
        input[type="password"] {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 16px;
        }


        .boton:hover {
            background-color: #005fa3;
        }

        .registro-link {
            display: inline-block;
            margin-top: 15px;
            text-decoration: none;
            color: #0077cc;
            font-weight: bold;
            text-align: center; 
        }

        .registro-link:hover {
            text-decoration: underline;
        }

        .error-message {
            color: red;
            font-size: 14px;
            margin-top: 10px;
        }
  body
    .contenedor
      img.logo-flotante(src="/img/logo.png", alt="Logo")
      br
      br
      h1 Iniciar Sesi칩n
      .inicio
        form(action="/login", method="POST")
            label(for="username") Nombre de usuario:
            input(type="text", name="username", required)
            br
            label(for="password") Contrase침a:
            input(type="password", name="password", required)
            br
            button(type="submit" class="boton") Entrar
            if error
                p(style="color:red") #{error}
            a.registro-link(href="/registrar") Crear usuario y contrase침a
