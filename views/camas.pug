extends layout.pug 

block content
  head
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    title Gestión de Camas
    link(rel="stylesheet", href="/css/style.css")
    style.
      .contenedor {
        display: flex;
        flex-wrap: wrap;
        width: 80%;
      }
      .camas {
        display: flex;
        flex-wrap: wrap;
        min-height: 100vh;
      }
      .menu {
        width: 20%;
        background: #003366;
        padding: 20px;
        box-sizing: border-box;
      }
      .alas {
        width: 33.33%;
        padding: 20px;
        box-sizing: border-box;
      }
      .menu button {
        width: 100%;
        margin: 10px 0;
        padding: 10px;
        border: none;
        border-radius: 10px;
        font-weight: bold;
        color: #fff;
        background: #1a6ebc;
        cursor: pointer;
        transition: .3s;
      }
      .menu button:hover {
        background: #1652a0;
      }
      .alas h1 {
        background: #003366;
        color: #fff;
        text-align: center;
        border-radius: 8px;
        padding: 10px;
        margin-bottom: 20px;
        font-size: 22px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, .1);
      }
      .habitaciones {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, .08);
        padding: 15px;
        margin-bottom: 20px;
      }
      .habitaciones h2 {
        text-align: center;
        margin-bottom: 15px;
        color: #1c2e44;
        font-size: 18px;
        border-bottom: 1px solid #dfe6ee;
        padding-bottom: 5px;
      }
      .cam-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 12px;
      }
      .cam {
        width: 80px;
        background: #ecf0f1;
        border-radius: 10px;
        text-align: center;
        padding: 10px;
        box-shadow: 0 1px 4px rgba(0, 0, 0, .1);
        transition: .3s transform, .3s background;
      }
      .cam:hover {
        transform: scale(1.07);
        background: #d0e6e2;
      }
      .cam h2 {
        margin: 0;
        font-size: 16px;
        color: #34495e;
      }
      .cam img {
        width: 100%;
        margin-top: 5px;
      }
      .emergencias {
        width: 100%;
        padding: 30px 20px 50px;
      }
      .emergencias h1 {
        background: #c0392b;
        color: #fff;
        text-align: center;
        padding: 15px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, .2);
        font-size: 26px;
        letter-spacing: 2px;
        margin-bottom: 30px;
      }
      .emergencias .cam {
        width: 100px;
        background: #f9d6d5;
      }
      @media(max-width: 768px) {
        .camas { flex-direction: column; }
        .menu, .alas { width: 100%; }
        .menu { order: -1; }
      }
      .cam.libre { 
        background: #d5f5e3; 
        }
      .cam.ocupada { 
        background: red; 
        cursor: not-allowed;
        pointer-event: none;
        opacity: 0.6;
        }
      .cam.higienizando { 
        background: yellow; 
        cursor: not-allowed;
        opacity: 0.6;
        }
      .cam.seleccionada {
        border: 2px solid blue;
        transform: scale(1.1);
      }
      .asignar-paciente {
        display: block !important;
        margin-top: 20px;
        background-color: white;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        z-index: 1000;
      }
      .asignar-paciente select{
        width: 100%;
      }
  header
    img(src="/img/logo.png", alt="Logo del Hospital" )
    h1 Gestión de Camas

  .camas
    .menu
      button(name="todos") Todas las camas
      button(name="libres") Camas Libres
      button(name="ocupadas") Camas Ocupadas
      button(name="higienizando") Camas Higienizando
      br
      .asignar-paciente

          p Paciente seleccionado: 
            br
            strong #{pacientes.nombre} (DNI: #{pacientes.dni})

          input(type="hidden", id="dniPaciente" value=pacientes.dni)
          br

          label(for="tipoIngreso") Tipo de ingreso:
          select#tipoIngreso(name="tipoIngreso")
            option(value="guardia") Guardia
            option(value="emergencias") Emergencias 
            option(value="derivacion-medica") Derivacion Medica 
            option(value="cita-programada") Cita Programada

          button#btnAsignarPaciente(type="button") Asignar

    .contenedor
      if alas && alas.length
        each ala in alas
          .alas
            h1 Ala #{ala.nombre}
            if ala.habitaciones && ala.habitaciones.length
              each hab in ala.habitaciones
                .habitaciones
                  h2 Habitación #{hab.id}
                  if hab.camas && hab.camas.length
                    .cam-container
                      each cama in hab.camas
                        - const claseCama = cama.estado === 'ocupada' ? 'cama.ocupada' : cama.estado === 'higienizando' ? 'cama.higienizando' : 'cama.libre'
                          .cam(data-id=cama.id class=cama.estado title=`Cama ID: ${cama.id} - Estado: ${cama.estado}`)
                            h2 #{cama.id}
                            img(src="/img/cama.png", alt="Cama")
                  else
                    p No hay camas en esta habitación
            else
              p No hay habitaciones en esta ala
      else
        p No hay alas para mostrar

    section.emergencias
      h1 Camas de Emergencia
      .cam-container(style="justify-content:center;gap:24px;")
        each e in ['E-1', 'E-2', 'E-3']
          .cam(data-id=`emergencia-${e}`)
            h2 #{e}
            img(src="/img/cama.png", alt="Cama emergencia")


  script.
    let camaSeleccionadaId = null;

    $(document).ready(function () {
      $('.asignar-paciente').hide()
      
      $('.cam').on('click', function () {
        if ($(this).hasClass('ocupada') || $(this).hasClass('higienizando')) {
          alert('Esta cama no está disponible para asignar.');
          return;
        }
        $('.cam').removeClass('seleccionada');
        $(this).addClass('seleccionada');
        camaSeleccionadaId = $(this).data('id');

        $('.asignar-paciente').show();
      });

      $('#btnAsignarPaciente').on('click', function () {
        if (!camaSeleccionadaId) {
          alert('Seleccione una cama');
          return;
        }

        const dniPaciente = $('#dniPaciente').val();
        const tipoIngreso = $('#tipoIngreso').val();

        console.log('Datos para asignar: ', {
          Idcama: camaSeleccionadaId,
          pacienteId: dniPaciente,
          tipoIngreso
        });

        fetch('/asignar-cama', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            idCama: camaSeleccionadaId,
            dni: dniPaciente,
            tipoIngreso
          })
        })
        .then(res => {
          console.log('Respuesta HTTP: ', res.status);
          return res.json();
        })
        .then(data => {
          console.log('Respuesta JSON: ', data);
          if (data.message || data.mensaje) {
            alert(data.message || data.mensaje);
            location.reload();
          } else {
            alert('Error al asignar paciente' + (data.mensaje || res.statusText));
          }
        })
        .catch(err => {
          console.error(err);
          alert('Error al asignar paciente, revisa la consola');
        });
      });
    });
