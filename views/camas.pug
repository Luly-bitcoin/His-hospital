extends layout.pug 

block content
  head
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    title Gesti贸n de Camas
    link(rel="stylesheet", href="/css/style.css")
    style.
      .contenedor {
        display: flex;
        flex-wrap: wrap;
        width: 80%;
      }
      .camas {
        display: flex;
        flex-wrap: wrap;
        min-height: 100vh;
      }
      .menu {
        width: 20%;
        background: #003366;
        padding: 20px;
        box-sizing: border-box;
      }
      .alas {
        width: 33.33%;
        padding: 20px;
        box-sizing: border-box;
      }
      .menu button {
        width: 100%;
        margin: 10px 0;
        padding: 10px;
        border: none;
        border-radius: 10px;
        font-weight: bold;
        color: #fff;
        background: #1a6ebc;
        cursor: pointer;
        transition: .3s;
      }
      .menu button:hover {
        background: #1652a0;
      }
      .alas h1 {
        background: #003366;
        color: #fff;
        text-align: center;
        border-radius: 8px;
        padding: 10px;
        margin-bottom: 20px;
        font-size: 22px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, .1);
      }
      .habitaciones {
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, .08);
        padding: 15px;
        margin-bottom: 20px;
      }
      .habitaciones h2 {
        text-align: center;
        margin-bottom: 15px;
        color: #1c2e44;
        font-size: 18px;
        border-bottom: 1px solid #dfe6ee;
        padding-bottom: 5px;
      }
      .cam-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 12px;
      }
      .cam {
        width: 80px;
        background: #ecf0f1;
        border-radius: 10px;
        text-align: center;
        padding: 10px;
        box-shadow: 0 1px 4px rgba(0, 0, 0, .1);
        transition: .3s transform, .3s background;
      }
      .cam:hover {
        transform: scale(1.07);
        background: #d0e6e2;
      }
      .cam h2 {
        margin: 0;
        font-size: 16px;
        color: #34495e;
      }
      .cam img {
        width: 100%;
        margin-top: 5px;
      }
      .emergencias {
        width: 100%;
        padding: 30px 20px 50px;
      }
      .emergencias h1 {
        background: #c0392b;
        color: #fff;
        text-align: center;
        padding: 15px;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, .2);
        font-size: 26px;
        letter-spacing: 2px;
        margin-bottom: 30px;
      }
      .emergencias .cam {
        width: 100px;
        background: #f9d6d5;
      }
      @media(max-width: 768px) {
        .camas { flex-direction: column; }
        .menu, .alas { width: 100%; }
        .menu { order: -1; }
      }
      .cam.libre { 
        background: #d5f5e3; 
        }
      .cam.ocupada { 
        background: red; 
        cursor: not-allowed;
        pointer-event: none;
        opacity: 0.6;
        }
      .cam.higienizando { 
        background: yellow; 
        cursor: not-allowed;
        opacity: 0.6;
        }
      .cam.seleccionada {
        border: 2px solid blue;
        transform: scale(1.1);
      }
      .asignar-paciente {
        display: block !important;
        margin-top: 20px;
        background-color: white;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        z-index: 1000;
      }
      .asignar-paciente select{
        width: 100%;
      }
      .habitaciones-emergencias{
        display: flex;
        justify-content: space-around;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, .08);
        padding: 15px;
        margin-bottom: 20px;
      }
      .habitaciones-emergencias .habitaciones{
        box-shadow: 0 0 0;
      }
      .menu button.activo {
        background-color: #3498db;
        color: white;
        font-weight: bold;
      }

  header
    img(src="/img/logo.png", alt="Logo del Hospital" )
    h1 Gesti贸n de Camas

  .camas
    .menu
      button(name="todos") Todas las camas
      button(name="libre") Camas Libres
      button(name="ocupada") Camas Ocupadas
      button(name="higienizando") Camas Higienizando
      button(name="emergencias") Camas de Emergencias
      br
    .contenedor
      if alas && alas.length
        each ala in alas
          if ala.nombre.toLowerCase() !== 'emergencias'
            .alas
              h1 Ala #{ala.nombre}
              if ala.habitaciones && ala.habitaciones.length
                each hab in ala.habitaciones
                  .habitaciones
                    h2 Habitaci贸n #{hab.id}
                    if hab.camas && hab.camas.length
                      .cam-container
                        each cama in hab.camas
                          - const claseCama = cama.estado === 'ocupada' ? 'cama.ocupada' : cama.estado === 'higienizando' ? 'cama.higienizando' : 'cama.libre'
                            .cam(data-id=cama.id data-estado=cama.estado.toLowerCase().trim() class=cama.estado.toLowerCase().trim() title=`Cama ID: ${cama.id} - Estado: ${cama.estado}`)
                              h2 #{cama.id}
                              img(src="/img/cama.png", alt="Cama")
                    else
                      p No hay camas en esta habitaci贸n
              else
                p No hay habitaciones en esta ala
        else
          p No hay alas para mostrar

        - const alaEmergencias  =alas.find(a => a.nombre.toLowerCase() === 'emergencias')
        if alaEmergencias 
          .emergencias 
            h1 Emergencias 
            if alaEmergencias.habitaciones && alaEmergencias.habitaciones.length 
              .habitaciones-emergencias
                each hab in alaEmergencias.habitaciones 
                  .habitaciones
                    h2 Habitacion #{hab.id}
                    if hab.camas && hab.camas.length 
                      .cam-container 
                        each cama in hab.camas 
                          - const claseCama = cama.estado === 'ocupada' ? 'ocupada' : cama.estado === 'higienizando' ? 'higienizando' : 'libre'
                            .cam(class=claseCama data-id=cama.id data-estado=cama.estado.toLowerCase().trim() title=`Cama ID: ${cama.id} - Estado: ${cama.estado}`)
                              h2 #{cama.id}
                              img(src="/img/cama.png", alt="cama")
                    else 
                      p No hay camas en esta habitacion 
            else 
              p No hay habitaciones de Emergencias

  script.
    const botones = document.querySelectorAll('.menu button');
    const camas = document.querySelectorAll('.cam');
    const habitaciones = document.querySelectorAll('.habitaciones');

    botones.forEach(btn => {
      btn.addEventListener('click', () => {
        botones.forEach(b => b.classList.remove('activo'));
        btn.classList.add('activo');

        const filtro = btn.name; 

        camas.forEach(cama => {
          const estado = cama.dataset.estado;

          if (filtro === 'todos') {
            cama.style.display = '';
          } else if (filtro === 'emergencias') {
            const esEmergencia = cama.closest('.emergencias');
            cama.style.display = esEmergencia ? '' : 'none';
          } else {
            cama.style.display = estado === filtro ? '' : 'none';
          }
        });

        habitaciones.forEach(hab => {
          const camasVisibles = hab.querySelectorAll('.cam:not([style*="display: none"])');
          hab.style.display = camasVisibles.length ? '' : 'none';
        });
      });
    });