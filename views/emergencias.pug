doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    title Ingreso de Emergencia
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="css/style.css")
    style.
      body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #fff5f5;
        padding: 40px;
      }

      h1 {
        text-align: center;
        color: #b30000;
      }

      form {
        max-width: 500px;
        margin: 0 auto;
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
      }

      label {
        display: block;
        margin-top: 15px;
        font-weight: bold;
      }

      input, select {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border-radius: 6px;
        border: 1px solid #ccc;
      }

      button {
        margin-top: 20px;
        width: 100%;
        padding: 12px;
        background-color: #e60000;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
      }
  body
    h1 Ingreso de Emergencia
    br
    br
    form#formEmergencia
      label DNI del paciente:
      input#dni(type="text" required)
      label Hora de ingreso:
      input#hora(type="text" disabled)
      label Cama de emergencia:
      select#cama(required)
        //- Opciones cargadas dinÃ¡micamente

      button(type="submit") Registrar emergencia

    script.
      // Mostrar hora actual
      const ahora = new Date();
      const hora = ahora.toLocaleTimeString('es-ES');
      document.getElementById('hora').value = hora;

      // Cargar camas de emergencia disponibles
      async function cargarCamas() {
        try {
          const res = await fetch('/api/camas/emergencias-disponibles');
          const camas = await res.json();
          const select = document.getElementById('cama');
          camas.forEach(c => {
            const option = document.createElement('option');
            option.value = c.id;
            option.textContent = `Cama ${c.numero} - Ala ${c.ala}`;
            select.appendChild(option);
          });
        } catch (err) {
          alert('Error al cargar camas: ' + err.message);
        }
      }

      cargarCamas();

      // Enviar formulario
      document.getElementById('formEmergencia').addEventListener('submit', async e => {
        e.preventDefault();
        const datos = {
          dni: document.getElementById('dni').value,
          hora: new Date().toISOString(),
          cama_id: document.getElementById('cama').value,
        };

        try {
          const res = await fetch('/api/emergencias', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(datos)
          });

          if (!res.ok) {
            const data = await res.json();
            throw new Error(data.message || 'Error al registrar emergencia');
          }

          alert('Emergencia registrada correctamente');
          window.location.href = 'index.html';
        } catch (err) {
          alert('Error: ' + err.message);
        }
      });
